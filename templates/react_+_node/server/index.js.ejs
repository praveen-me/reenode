  console.log(`Localhost: ${chalk.magenta(`http://localhost:${PORT}`)}`);
  console.log(`      Lan: ${chalk.magenta(`http://${ip.address()}:${PORT}`)}`);
  console.log(chalk.bold('-----------------------------------'));
  console.log(chalk.italic.red(`Press Ctrl/Cmd + C to stop.\n`));
});
